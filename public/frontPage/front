// frontPageDashboard.js - Com suporte a Firebase + localStorage

function $(id) {
  return document.getElementById(id);
}

function formatEUR(n) {
  return "EUR" + Number(n || 0).toFixed(2);
}

// Chart instances
var dashboardChart = null;
var expensesChart = null;
var forecastChart = null;
var paymentsForecastChart = null;

// ========== MARK ACTIVE PAGE ==========
function markActivePage() {
  var currentPage = window.location.href;
  var links = document.querySelectorAll('.sidebar-link');
  
  for (var i = 0; i < links.length; i++) {
    links[i].parentElement.classList.remove('active');
    
    if (links[i].href === currentPage) {
      links[i].parentElement.classList.add('active');
    }
  }
}

// ========== OBTER DADOS DO USUÃRIO ==========
function getUserId() {
  var user = null;
  
  // Tentar AuthSystem
  if (window.AuthSystem && window.AuthSystem.getCurrentUser) {
    user = window.AuthSystem.getCurrentUser();
  }
  
  // Fallback: tentar da sessao
  if (!user) {
    try {
      var session = localStorage.getItem('upsen_current_user');
      if (session) {
        var data = JSON.parse(session);
        user = data.user;
      }
    } catch (e) {}
  }
  
  return user ? (user.uid || user.id) : 'unknown';
}

function getDataKey(type) {
  var userId = getUserId();
  return 'upsen_' + type + '_' + userId;
}

function getUserExpenses() {
  var key = getDataKey('expenses');
  try {
    var data = localStorage.getItem(key);
    if (data) return JSON.parse(data);
  } catch (e) {}
  return [];
}

function getUserInvoicesIssued() {
  var key = getDataKey('invoices_issued');
  try {
    var data = localStorage.getItem(key);
    if (data) return JSON.parse(data);
  } catch (e) {}
  return [];
}

function getUserInvoicesReceived() {
  var key = getDataKey('invoices_received');
  try {
    var data = localStorage.getItem(key);
    if (data) return JSON.parse(data);
  } catch (e) {}
  return [];
}

// ========== CARREGAR DO FIRESTORE ==========
function loadFromFirestore() {
  var user = null;
  
  if (window.AuthSystem && window.AuthSystem.getCurrentUser) {
    user = window.AuthSystem.getCurrentUser();
  }
  
  if (!user || !user.uid) return;
  if (!window.firebaseDb) return;
  
  // Carregar expenses
  window.firebaseDb.collection('companies').doc(user.uid)
    .collection('expenses')
    .orderBy('createdAt', 'desc')
    .get()
    .then(function(snapshot) {
      if (!snapshot.empty) {
        var docs = [];
        snapshot.forEach(function(doc) {
          docs.push({ id: doc.id, ...doc.data() });
        });
        localStorage.setItem(getDataKey('expenses'), JSON.stringify(docs));
      }
    })
    .catch(function(e) {
      console.warn('Erro ao carregar expenses do Firestore:', e);
    });
  
  // Carregar invoices issued
  window.firebaseDb.collection('companies').doc(user.uid)
    .collection('invoicesIssued')
    .orderBy('createdAt', 'desc')
    .get()
    .then(function(snapshot) {
      if (!snapshot.empty) {
        var docs = [];
        snapshot.forEach(function(doc) {
          docs.push({ id: doc.id, ...doc.data() });
        });
        localStorage.setItem(getDataKey('invoices_issued'), JSON.stringify(docs));
      }
    })
    .catch(function(e) {
      console.warn('Erro ao carregar invoices issued do Firestore:', e);
    });
  
  // Carregar invoices received
  window.firebaseDb.collection('companies').doc(user.uid)
    .collection('invoicesReceived')
    .orderBy('createdAt', 'desc')
    .get()
    .then(function(snapshot) {
      if (!snapshot.empty) {
        var docs = [];
        snapshot.forEach(function(doc) {
          docs.push({ id: doc.id, ...doc.data() });
        });
        localStorage.setItem(getDataKey('invoices_received'), JSON.stringify(docs));
      }
    })
    .catch(function(e) {
      console.warn('Erro ao carregar invoices received do Firestore:', e);
    });
}

// ========== KPI HELPERS ==========
function sumInvoicesReceivedMonthYear(year, month) {
  var total = 0;
  var invoices = getUserInvoicesReceived();
  
  for (var i = 0; i < invoices.length; i++) {
    var inv = invoices[i];
    if (!inv.invoiceDate) continue;
    
    var parts = inv.invoiceDate.split('-');
    if (parts.length >= 2) {
      var y = parseInt(parts[0]);
      var m = parseInt(parts[1]) - 1;
      if (y === year && m === month) {
        total += Number(inv.amount) || 0;
      }
    }
  }
  return total;
}

function countInvoicesReceivedMonthYear(year, month) {
  var count = 0;
  var invoices = getUserInvoicesReceived();
  
  for (var i = 0; i < invoices.length; i++) {
    var inv = invoices[i];
    if (!inv.invoiceDate) continue;
    
    var parts = inv.invoiceDate.split('-');
    if (parts.length >= 2) {
      var y = parseInt(parts[0]);
      var m = parseInt(parts[1]) - 1;
      if (y === year && m === month) {
        count++;
      }
    }
  }
  return count;
}

function countInvoicesReceivedPending() {
  var count = 0;
  var invoices = getUserInvoicesReceived();
  
  for (var i = 0; i < invoices.length; i++) {
    var inv = invoices[i];
    var state = (inv.state || '').toLowerCase();
    if (state === 'pendiente') {
      count++;
    }
  }
  return count;
}

function sumInvoicesIssuedMonthYear(year, month) {
  var total = 0;
  var invoices = getUserInvoicesIssued();
  
  for (var i = 0; i < invoices.length; i++) {
    var inv = invoices[i];
    if (!inv.invoiceDate) continue;
    
    var parts = inv.invoiceDate.split('-');
    if (parts.length >= 2) {
      var y = parseInt(parts[0]);
      var m = parseInt(parts[1]) - 1;
      if (y === year && m === month) {
        total += Number(inv.amount) || 0;
      }
    }
  }
  return total;
}

