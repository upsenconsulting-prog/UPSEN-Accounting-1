<script src="./frontPageDashboard.js"></script>
<script>
// Funcoes globais
function showNewDocumentModal() {
  document.getElementById('modalNewDocument').style.display = 'flex';
}

function hideNewDocumentModal() {
  document.getElementById('modalNewDocument').style.display = 'none';
}

function navigateToPage(page) {
  hideNewDocumentModal();
  setTimeout(function() { window.location.href = page; }, 150);
}

function logout() {
  AuthSystem.logout().then(function() {
    window.location.href = '../login.html';
  });
}

// Inicializacao
document.addEventListener('DOMContentLoaded', function() {
  console.log('Inicializando pagina...');
  
  // Verificar se usuario esta logado
  AuthSystem.init(function(result) {
    console.log('Auth init result:', result.isLoggedIn);
    
    if (!result.isLoggedIn) {
      console.log('Usuario nao logado, redirecionando...');
      window.location.href = '../login.html';
      return;
    }
    
    console.log('Usuario logado:', result.userData ? result.userData.email : 'unknown');
  });
});
</script>
